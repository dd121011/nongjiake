<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_title_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/content_margin_outside" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_back_btn"
                android:clickable="false"
                android:text=""
                android:textColor="@color/text_color0"
                android:textSize="@dimen/text_size3" />
        </LinearLayout>

        <com.yunmeike.view.SelectableRoundedImageView
            android:id="@+id/face_img_tmp"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerInParent="true"
            android:src="@drawable/img_default_icon"
            app:sriv_border_color="@color/text_color0"
            app:sriv_border_width="2dip"
            app:sriv_left_bottom_corner_radius="48dip"
            app:sriv_left_top_corner_radius="16dip"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="16dip"
            app:sriv_right_top_corner_radius="0dip" />

        <LinearLayout
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/content_margin_outside" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_share_btn"
                android:clickable="false"
                android:text=""
                android:textColor="@color/text_color0"
                android:textSize="@dimen/text_size3" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/top_title_background">

        <com.yunmeike.view.MyScrollView
            android:id="@+id/scroll_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="none"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_outside"
                        android:gravity="bottom|center_horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/content_margin_inside"
                            android:text="李梦瑶"
                            android:textColor="@color/text_color0"
                            android:textSize="@dimen/text_size0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设计总监"
                            android:textColor="@color/text_color5"
                            android:textSize="@dimen/text_size5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_outside"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/content_margin_inside"
                            android:src="@drawable/shop_adress_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李梦瑶"
                            android:textColor="@color/text_color6"
                            android:textSize="@dimen/text_size3" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_outside"
                            android:layout_marginRight="@dimen/content_margin_outside"
                            android:background="@color/text_color6" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/content_margin_inside"
                            android:src="@drawable/shop_details_adress_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设计总监"
                            android:textColor="@color/text_color6"
                            android:textSize="@dimen/text_size3" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_outside"
                        android:scaleType="fitXY"
                        android:src="@drawable/barber_details_line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/content_margin_outside"
                        android:paddingRight="@dimen/content_margin_outside"
                        android:paddingTop="@dimen/content_margin_outside"
                        android:text="标签：美丽生活从这里开始，选择审美造型，打造属于你的美丽。"
                        android:textColor="@color/text_color6"
                        android:textSize="@dimen/text_size3" />

                    <com.yunmeike.view.MyGridView
                        android:id="@+id/barber_face_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/content_margin_outside"
                        android:background="@android:color/transparent"
                        android:columnWidth="90dp"
                        android:fadingEdge="none"
                        android:focusable="false"
                        android:gravity="center"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="6"
                        android:padding="@dimen/content_margin_outside"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth" >
                    </com.yunmeike.view.MyGridView>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/barber_details_line" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/swith_shop_details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/content_margin_outside"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:text="234\n作品"
                        android:textColor="@drawable/switch_text_color"
                        android:textSize="@dimen/text_size4" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/content_margin_outside"
                        android:background="@color/text_color6" />

                    <RadioButton
                        android:id="@+id/radio_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/content_margin_outside"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:text="34\n点评"
                        android:textColor="@drawable/switch_text_color"
                        android:textSize="@dimen/text_size4" />

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/content_margin_outside"
                        android:background="@color/text_color6" />

                    <RadioButton
                        android:id="@+id/radio_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/content_margin_outside"
                        android:text="3435\n粉丝"
                        android:textColor="@drawable/switch_text_color"
                        android:textSize="@dimen/text_size4" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginRight="@dimen/content_margin_outside"
                    android:background="@color/text_color6" />

                <FrameLayout
                    android:id="@+id/fragment_content"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/text_color9" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tab_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/tab_near_btn" >
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首页"
                        android:textColor="#929292"
                        android:textSize="@dimen/text_size5" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </com.yunmeike.view.MyScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color8"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@drawable/favorites_btn_d" >
                </ImageView>

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="#929292"
                    android:textSize="@dimen/text_size5" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@drawable/shop_details_subscribe_btn" >
                </ImageView>

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约"
                    android:textColor="#929292"
                    android:textSize="@dimen/text_size5" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@drawable/shop_details_tel_btn" >
                </ImageView>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="#929292"
                    android:textSize="@dimen/text_size5" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@drawable/shop_details_remark_btn" >
                </ImageView>

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点评"
                    android:textColor="#929292"
                    android:textSize="@dimen/text_size5" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/title_layout2"
            layout="@layout/top_title_layout"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>