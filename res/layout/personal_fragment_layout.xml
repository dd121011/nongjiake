<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/text_color9"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/personal_info_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/personal_info_bg" />

                <TextView
                    android:id="@+id/sign_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/personal_info_bg"
                    android:layout_marginBottom="@dimen/content_margin_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/content_margin_inside"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/content_margin_outside"
                    android:paddingRight="@dimen/content_margin_outside"
                    android:text="签名：美丽生活从这里开始哦，喜欢做都是丽人的风格哦，赶紧过来哦！"
                    android:textColor="@color/text_color0"
                    android:textSize="@dimen/text_size2" />

                <View
                    android:id="@+id/divider_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_above="@id/sign_text"
                    android:layout_marginBottom="@dimen/content_margin_vertical"
                    android:layout_marginTop="@dimen/content_margin_vertical"
                    android:background="#40e5e5e5" />

                <TextView
                    android:id="@+id/personal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/divider_line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/content_margin_vertical"
                    android:text="13898765766"
                    android:textColor="@color/text_color0"
                    android:textSize="@dimen/text_size0" />

                <RelativeLayout
                    android:id="@+id/face_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/personal_name" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/face_img_bg" />

                    <com.yunmeike.view.SelectableRoundedImageView
                        android:id="@+id/face_img"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/content_margin_inside"
                        android:layout_marginTop="@dimen/content_margin_outside"
                        android:src="@drawable/face_test1"
                        app:sriv_border_color="@color/text_color0"
			            app:sriv_border_width="0dip"
			            app:sriv_left_bottom_corner_radius="48dip"
			            app:sriv_left_top_corner_radius="16dip"
			            app:sriv_oval="true"
			            app:sriv_right_bottom_corner_radius="16dip"
			            app:sriv_right_top_corner_radius="0dip" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color0" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/content_margin_outside" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/personal_vip_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_inside"
                        android:text="我的会员卡"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/text_size5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/content_margin_outside" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/personal_favorites_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_inside"
                        android:text="收藏店铺"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/text_size5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/content_margin_outside" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/personal_favorites_barber_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/content_margin_inside"
                        android:text="收藏美发师"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/text_size5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/content_margin_outside"
                android:background="@color/text_color0" >
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="center_vertical"
                	android:padding="@dimen/content_margin_outside">
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/pay_record_icon"/>
                    <TextView 
                        android:layout_width="0dip"
                		android:layout_height="wrap_content"
                		android:layout_weight="1"
                		android:layout_marginLeft="@dimen/content_margin_vertical"
                		android:textSize="@dimen/text_size1"
                		android:textColor="@color/text_color2"
                		android:text="消费记录"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/next_cion"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="@dimen/content_margin_outside"
                    android:background="@color/text_color6" />
                
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="center_vertical"
                	android:padding="@dimen/content_margin_outside">
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/invite_friends_icon"/>
                    <TextView 
                        android:layout_width="0dip"
                		android:layout_height="wrap_content"
                		android:layout_weight="1"
                		android:layout_marginLeft="@dimen/content_margin_vertical"
                		android:textSize="@dimen/text_size1"
                		android:textColor="@color/text_color2"
                		android:text="邀请好友"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/next_cion"/>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/content_margin_outside"
                android:background="@color/text_color0" >
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="center_vertical"
                	android:padding="@dimen/content_margin_outside">
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/register_barber_icon"/>
                    <TextView 
                        android:layout_width="0dip"
                		android:layout_height="wrap_content"
                		android:layout_weight="1"
                		android:layout_marginLeft="@dimen/content_margin_vertical"
                		android:textSize="@dimen/text_size1"
                		android:textColor="@color/text_color2"
                		android:text="申请美发师"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/next_cion"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="@dimen/content_margin_outside"
                    android:background="@color/text_color6" />
                
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="center_vertical"
                	android:padding="@dimen/content_margin_outside">
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/add_shop_icon"/>
                    <TextView 
                        android:layout_width="0dip"
                		android:layout_height="wrap_content"
                		android:layout_weight="1"
                		android:layout_marginLeft="@dimen/content_margin_vertical"
                		android:textSize="@dimen/text_size1"
                		android:textColor="@color/text_color2"
                		android:text="添加店铺"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/next_cion"/>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/content_margin_outside"
                android:background="@color/text_color0" >
                <LinearLayout 
                    android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="center_vertical"
                	android:padding="@dimen/content_margin_outside">
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/more_icon"/>
                    <TextView 
                        android:layout_width="0dip"
                		android:layout_height="wrap_content"
                		android:layout_weight="1"
                		android:layout_marginLeft="@dimen/content_margin_vertical"
                		android:textSize="@dimen/text_size1"
                		android:textColor="@color/text_color2"
                		android:text="更多"/>
                    <ImageView 
                        android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:src="@drawable/next_cion"/>
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>