<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/content_margin_outside"
        android:background="@color/text_color0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/content_margin_outside" >

            <ImageView
                android:layout_width="150dip"
                android:layout_height="100dip"
                android:scaleType="fitXY"
                android:src="@drawable/test1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margin_outside"
                android:layout_marginTop="@dimen/content_margin_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_margin_outside"
                    android:text="王小二农家乐"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_margin_outside"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/adress_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王小二农家乐"
                        android:textColor="@color/text_color2"
                        android:textSize="@dimen/text_size2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/content_margin_outside"
                        android:background="@drawable/near_item_text_bg"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:paddingRight="@dimen/content_margin_inside"
                        android:text="采摘"
                        android:textColor="@color/text_color4"
                        android:textSize="@dimen/text_size4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/content_margin_outside"
                        android:background="@drawable/near_item_text_bg"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:paddingRight="@dimen/content_margin_inside"
                        android:text="垂钓"
                        android:textColor="@color/text_color4"
                        android:textSize="@dimen/text_size4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/content_margin_outside"
                        android:background="@drawable/near_item_text_bg"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:paddingRight="@dimen/content_margin_inside"
                        android:text="祈福"
                        android:textColor="@color/text_color4"
                        android:textSize="@dimen/text_size4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/near_item_text_bg"
                        android:paddingLeft="@dimen/content_margin_inside"
                        android:paddingRight="@dimen/content_margin_inside"
                        android:text="农家"
                        android:textColor="@color/text_color4"
                        android:textSize="@dimen/text_size4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/text_color6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/content_margin_outside" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气35364"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/text_size4" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="20dip"
                android:background="@color/text_color6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点评35364"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/text_size4" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="20dip"
                android:background="@color/text_color6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人均(￥)35364"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/text_size4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>