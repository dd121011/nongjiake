<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yunmeike="http://schemas.android.com/apk/res/com.njk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color0"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dip" />

    <LinearLayout
        android:id="@+id/select_baber_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_barber_user" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_vertical"
            android:background="@drawable/select_user_btn_bg"
            android:text="我是美发师"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_size1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_normal_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_normal_user" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_vertical"
            android:background="@drawable/select_user_btn_bg"
            android:text="我是美客"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_size1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dip" />
</LinearLayout>